<Application x:Class="VersioningManagement.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:VersioningManagement">
    <Application.Resources>
        <Style x:Key="CustomWindowStyle" TargetType="{x:Type Window}">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="ResizeMode" Value="NoResize"/>
        </Style>
        <!-- Due to a bug this is needed: https://bengribaudo.com/blog/2010/08/19/106/bug-single-application-resources-entry-ignored-->
        <Style x:Key="unused" />
    </Application.Resources>
</Application>
